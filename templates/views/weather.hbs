<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlink}}
</head>

<body>
  {{>navbar}}
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
               <div class="main_content">
                   <form action="" class="temp_form">
                   <input type="text" id="cityName" placeholder="Enter City Name" autocomplete="off">
                   <input type="submit" value="search" id="submitbtn">
                   </form>
               </div>
               <div class="tempInfo">
                   <div class="top_layer">
                       <p id="day">Tuesday</p>
                       <p id="date">13 Oct</p>
                   </div>
                   <div class="main_layer">
                       <p id="city_name">Get output here</p>
                       <div class="middle_layer data_hide">
                           <p id="temp"><span id="temp_realvalue">0</span> <sup>o</sup> C</p>
                           <p id="temp_status"><i class="fas fa-cloud"></i></p>
                       </div>
                   </div>
               </div>
               
            </div>
        </div>
    </div>
    {{>footer}}

    <script src="js/main.js"></script>
    <script>
        const date = document.getElementById("date")
        const getCurrentDay = () => {
            let weekday = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thrusday", "Friday", "Saturday"];
            let currentTime = new Date();
            days = weekday[currentTime.getDay()];
            let day = document.getElementById("day")
            day.innerText = days
        }
            getCurrentDay()
            const getCurrentTime = () =>{
            const months = ["Jan", "Feb", "March", "April","May", "June", "Jul","Aug","Sep","Oct","Nov","Dec"];
            var now = new Date();
            const month = months[now.getMonth()];
            const date = now.getDate();
            let hours = now.getHours();
            const mins = now.getMinutes();

            let periods = "AM";
            if(hours>11){
                periods = "PM";
                if(hours>12)
                    hours -= 12
            }
            if(mins<10)
                mins = "0" + mins;
            return `${month} ${date}  | ${hours}:${mins}${periods}`
        }
        date.innerText = getCurrentTime()
    </script>
</body>

</html>